#!/usr/bin/env bash
MSG_FILE="$1"
HEADLINE=$(head -n1 "$MSG_FILE")
if ! echo "$HEADLINE" | grep -E -q '^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\([a-z0-9._-]+\))?: .+'; then
  echo "Conventional Commit required. Example: feat(materials): adjust base grey material color" >&2
  exit 1
fi
  